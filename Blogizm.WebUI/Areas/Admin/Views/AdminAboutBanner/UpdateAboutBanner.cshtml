@model UpdateAboutBannerDto
@{
    ViewData["Title"] = "UpdateAboutBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımızda Banner Güncelleme İşlemi</h4>
                        <p class="card-subtitle mb-4">İlgili parametreleri doldurup Hakkımızda Banner  ekleme işlemini gerçekleştirebilirsiniz.</p>

                        <form method="post">

                            <input type="hidden" asp-for="AboutBannerId" />
                            <div class="form-group">
                                <label for="exampleInputPassword1">Hakkımızda Banner Başlık 1</label>
                                <input type="text" autocomplete="off" value="@Model.BannerTitle1" class="form-control" asp-for="BannerTitle1" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Hakkımızda Banner Açıklama 1</label>
                                <input type="text" autocomplete="off" value="@Model.BannerDesc1" class="form-control" asp-for="BannerDesc1" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Hakkımızda Banner Resim 1</label>
                                <input type="text" autocomplete="off" value="@Model.BannerImg1" class="form-control" asp-for="BannerImg1" id="exampleInputPassword1">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Hakkımızda Banner Başlık 2</label>
                                <input type="text" autocomplete="off" value="@Model.BannerTitle2" class="form-control" asp-for="BannerTitle2" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Hakkımızda Banner Açıklama 2</label>
                                <input type="text" autocomplete="off" value="@Model.BannerDesc2" class="form-control" asp-for="BannerDesc2" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Hakkımızda Banner Resim 2</label>
                                <input type="text" autocomplete="off" value="@Model.BannerImg2" class="form-control" asp-for="BannerImg2" id="exampleInputPassword1">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>

        </div>

    </div>
</div>


