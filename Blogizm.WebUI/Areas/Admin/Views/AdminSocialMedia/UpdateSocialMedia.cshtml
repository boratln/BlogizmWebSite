@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya  Güncelleme İşlemi</h4>
                        <p class="card-subtitle mb-4">İlgili parametreleri doldurup Sosyal Medya  güncelleme işlemini gerçekleştirebilirsiniz.</p>

                        <form method="post">

                            <input type="hidden" asp-for="SocialMediaId" />
                            <div class="form-group">
                                <label for="exampleInputPassword1">Sosyal Medya Başlık</label>
                                <input type="text" autocomplete="off" class="form-control" value="@Model.Title"  asp-for="Title" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Sosyal Medya İkon</label>
                                <input type="text" autocomplete="off" class="form-control" value="@Model.Icon" asp-for="Icon" id="exampleInputPassword1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Sosyal Medya URL</label>
                                <input type="text" autocomplete="off" class="form-control" value="@Model.URL" asp-for="URL" id="exampleInputPassword1">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>

        </div>

    </div>
</div>

