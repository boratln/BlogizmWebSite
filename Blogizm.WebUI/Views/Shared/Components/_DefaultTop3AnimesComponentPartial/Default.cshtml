@model List<ResultTop3AnimesBlogDto>
@functions {
	public string GetRelativeTime(DateTime createdDate)
	{
		var timeSpan = DateTime.Now - createdDate;

		if (timeSpan.TotalMinutes == 0)
		{
			return $"{(int)timeSpan.TotalSeconds} saniye önce";
		}
		if (timeSpan.TotalMinutes < 60)
		{
			return $"{(int)timeSpan.TotalMinutes} dakika önce";
		}
		else if (timeSpan.TotalHours < 24)
		{
			return $"{(int)timeSpan.TotalHours} saat önce";
		}
		else
		{
			return $"{(int)timeSpan.TotalDays} gün önce";
		}
	}
}
<section class="section">
	<div class="container">

		<div class="row mb-4">
			<div class="col-sm-6">
				<h2 class="posts-entry-title">Anime</h2>
			</div>
			<div class="col-sm-6 text-sm-end"><a href="category.html" class="read-more">Tümünü Gör</a></div>
		</div>

		<div class="row">
			@foreach(var data in Model){
				var relativetime = GetRelativeTime(data.CreatedDate);
				<div class="col-lg-4 mb-4">
					<div class="post-entry-alt">
						<a href="single.html" class="img-link"><img style="width:100%;height:250px" src="@data.CoverImageUrl" alt="Image" class="img-fluid"></a>
						<div class="excerpt">
							

							<h2><a href="single.html">@data.Title</a></h2>
							<div class="post-meta align-items-center text-left clearfix">
								<figure class="author-figure mb-0 me-3 float-start"><img src="@data.BlogImage1" alt="Image" class="img-fluid"></figure>
								<span class="d-inline-block mt-1">Yazar: <a href="#">@data.AuthorName</a></span>
								<span>@relativetime</span>
							</div>

							<p id="bloganimesdesc-@data.BlogId">@data.Description <a href="#" class="read-more">Devamını Oku</a></p>
							
							<script>
								document.querySelectorAll('[id^="bloganimesdesc-"]').forEach(element => {
									const text = element.textContent; // Veya innerText
									const substringText = text.substring(0, 150); // İlk 100 karakteri al
									console.log("Text:", text);
									console.log("Substring Text:", substringText);
									element.textContent = substringText + "...";
								});
							</script>
						</div>
					</div>
				</div>
			}
		

		</div>

	</div>
</section>
