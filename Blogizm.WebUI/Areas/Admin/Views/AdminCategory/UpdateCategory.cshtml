@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Kategori Güncelleme İşlemi</h4>
                        <p class="card-subtitle mb-4">İlgili parametreleri doldurup kategori güncelleme işlemini gerçekleştirebilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="CategoryId" />
                            <div class="form-group">
                                <label for="exampleInputPassword1">Kategori Adı</label>
                                <input type="text" value="@Model.Name" autocomplete="off" class="form-control" asp-for="Name" id="exampleInputPassword1">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Ekle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>

        </div>

    </div>
</div>


