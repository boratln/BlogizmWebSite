
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("AdminLayoutHeadComponentPartial")

<body>

    <!-- Begin page -->
    <div id="layout-wrapper">

        @await Component.InvokeAsync("AdminLayoutHeaderComponentPartial")

        @await Component.InvokeAsync("AdminLayoutSidebarComponentPartial")
 
        <div class="main-content">

            @RenderBody()
        
            <!-- End Page-content -->

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            2019 © Xacton.
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-right d-none d-sm-block">
                                Design & Develop by Myra
                            </div>
                        </div>
                    </div>
                </div>
            </footer>

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>


    @await Component.InvokeAsync("AdminLayoutScriptsComponentPartial")

</body>

</html>

